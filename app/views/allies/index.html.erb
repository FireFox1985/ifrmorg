<% if !@outgoing_ally_requests.empty? %>
  <strong>Outgoing Requests</strong>
  <br>
  <br>
  <% @outgoing_ally_requests.each_with_index do |ally, index| %>
    <% if index + 1 == @outgoing_ally_requests.length %>
      <div class="ally" style="margin-bottom: 0">
    <% else %>
      <div class="ally">
    <% end %>
        <div class="align_left">
          <h1 class="ally_name"><%= link_to ally.name, profile_index_path(userid: ally.id) %></h1>
        </div>
        <div class="align_right location">
          <%= ally.location %>
        </div>
        <div class="clear"></div>
        <%= link_to 'Cancel', remove_allies_path(:userid1 => current_user.id, :userid2 => ally_id), :method => :post, data: { confirm: 'Are you sure?' } %>
      </div>
  <% end %>
<% end %>

<% if !@incoming_ally_requests.empty? %>
  <% if !@outgoing_ally_requests.empty? %>
    <div class="spacer"></div>
  <% end %>
  <strong>Incoming Requests</strong>
  <br>
  <br>
  <% @incoming_ally_requests.each_with_index do |ally, index| %>
    <% if index + 1 == @incoming_ally_requests.length %>
      <div class="ally" style="margin-bottom: 0">
    <% else %>
      <div class="ally">
    <% end %>
        <div class="align_left">
          <h1 class="ally_name"><%= link_to ally.name, profile_index_path(:userid => ally.id) %></h1>
        </div>
        <div class="align_right location">
          <%= ally.location %>
        </div>
        <div class="clear"></div>
        <%= link_to 'Accept', add_allies_path(user: current_user.id, ally: ally, status: User.ALLY_STATUS[:accepted]), method: :post %> | <%= link_to 'Reject', remove_allies_path(:userid1 => current_user.id, :userid2 => ally_id), :method => :post, data: { confirm: 'Are you sure?' } %>
      </div>
  <% end %>
<% end %>

<% @accepted_allies.each_with_index do |ally, index| %>
  <% if !@incoming_ally_requests.empty? || !@outgoing_ally_requests.empty? %>
    <div class="spacer"></div>
  <% end %>
  <% if index+1 == @accepted_allies.length %>
    <div class="ally" style="margin-bottom: 0">
  <% else %>
    <div class="ally">
  <% end %>
      <div class="table">
        <div class="table_cell" style="width: 200px; padding-right: 40px">
          <%= image_tag fetch_profile_picture(ally.avatar.url), class: 'profile_picture' %>
        </div>
        <div class="table_cell" style="vertical-align: top">
          <div class="align_left">
            <h1 class="ally_name"><%= link_to ally.name, profile_index_path(:userid => ally.id) %></h1>
          </div>
          <div class="align_right location">
            <%= ally.location %>
          </div>
          <div class="clear"></div>
            <%= link_to 'Remove', remove_allies_path(:userid1 => current_user.id, :userid2 => ally_id), :method => :post, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    </div>
<% end %>
