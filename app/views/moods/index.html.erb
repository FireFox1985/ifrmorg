<div class="subtitle">
  <%= t('.subtitle') %>
</div>

<% if @moods.length > 0 %>
  <div class="spacer"></div>
  <table>
    <thead>
      <tr>
        <th><%= t('.name') %></th>
        <th><%= t('.description') %></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @moods.each do |mood| %>
        <tr>
          <td><%= link_to mood.name, mood %></td>
          <td>
            <%= simple_format(mood.description[0..80]) %>
            <% if mood.description.length >= 80 %>
              <%= " [...]" %>
            <% end %>
          </td>
          <td>
            <i class="fa fa-pencil action"></i><%= link_to t('.edit'), edit_mood_path(mood) %>
            <i class="fa fa-trash-o action" style="margin-left: 20px"></i><%= link_to t('.delete'), mood, method: :delete, data: { confirm: t('.confirm') } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>