<div class="align_right" style="margin-bottom: 40px">
  <i class="fa fa-plus-square-o action"></i><%= link_to 'New Trigger', new_trigger_path %>
</div>
<div class="clear"></div>

<% @triggers.each do |trigger| %>
  <div class="trigger">
    <h1 class="trigger_name"><%= link_to trigger.name, trigger %></h1>
    Category: <%= Category.where(:id => trigger.category).first.name %>
    <br />Mood: <%= Category.where(:id => trigger.mood).first.name %>
    <div style="margin-top: 20px">
      <i class="fa fa-pencil action"></i><%= link_to 'Edit', edit_trigger_path(trigger) %>
      <i class="fa fa-trash-o action" style="margin-left: 20px"></i><%= link_to 'Delete', trigger, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
<% end %>

