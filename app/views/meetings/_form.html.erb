<%= form_for(@meeting) do |f| %>
  <% if @meeting.errors.any? %>
    <div class="error_explanation">
      <%= t('.error_explanation') %>
    </div>
  <% end %>

<div class="table">

  <div class="table_cell padding_right vertical_align_top">

    <div class="sidebar_field">
      <div class="sidebar_label">
        <%= f.label t('.name') %>
        <i class="fa fa-exclamation-circle align_right"></i>
        <div class="clear"></div>
      </div>
      <%= f.text_field :name, class: 'name_field' %>
    </div>

    <div class="sidebar_field">
      <div class="sidebar_label">
        <%= f.label t('.location') %>
        <i class="fa fa-exclamation-circle align_right"></i>
        <div class="clear"></div>
      </div>
      <%= f.text_field :location, placeholder: t('.location_placeholder'), class: 'full_field' %>
    </div>

    <div class="sidebar_field">
      <div class="sidebar_label">
        <%= f.label t('.time') %>
        <i class="fa fa-exclamation-circle align_right"></i>
        <div class="clear"></div>
      </div>
      <%= f.text_field :time, class: 'full_field' %>
    </div>

    <div class="sidebar_field">
      <div class="sidebar_label">
        <%= f.label t('.date') %>
        <i class="fa fa-exclamation-circle align_right"></i>
        <div class="clear"></div>
      </div>
      <%= f.text_field :date, class: 'full_field' %>
    </div>

    <div class="sidebar_field">
      <div class="sidebar_label">
        <%= f.label t('.maximum_members') %>
        <i class="fa fa-exclamation-circle align_right"></i>
        <div class="clear"></div>
      </div>
      <%= f.number_field :maxmembers, min: 0, placeholder: t('.maximum_placeholder'), class: 'full_field' %>
    </div>

  </div>

  <div class="table_cell vertical_align_top">

    <div class="field">
      <div class="label">
        <%= f.label t('.description') %>
        <i class="fa fa-exclamation-circle align_right"></i>
        <div class="clear"></div>
      </div>
      <%= f.cktext_area :description, class: 'no_title special_textarea ckeditor' %>
    </div>

    <div class="actions">
      <%= f.hidden_field :groupid, value: @groupid || @meeting.groupid %>
      <%= f.submit %>
    </div>

  </div>

</div>

<% end %>