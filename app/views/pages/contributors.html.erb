			<div class="spacer"></div>
			<i class="fa fa-location-arrow fa-inline"></i> Toronto, Canada
			<i class="fa fa-github fa-inline fa-left"></i><%= link_to('julianguyen', 'http://github.com/julianguyen', class: "spacing") %>
		</div>
	</div>
	<div class="table_row">
		<div class="table_cell" style="width: 200px; padding-right: 40px; padding-bottom: 40px; vertical-align: middle">
			<%= image_tag 'contributors/jennifer_shen.png', class: 'contributor_picture' %>
		</div>
		<div class="table_cell" style="padding-bottom: 40px; vertical-align: top">
			<div class="subtitle">Jennifer Shen</div>
			<div class="spacer"></div>
