			<i class="fa fa-location-arrow fa-inline"></i> Toronto, Canada
			<i class="fa fa-github fa-inline fa-left"></i><%= link_to('jzshen', 'http://github.com/jzshen', class: "spacing") %>
		</div>
	</div>
	<div class="table_row">
		<div class="table_cell" style="width: 200px; padding-right: 40px; vertical-align: middle">
			<%= image_tag 'default_ifme_avatar.png', class: 'contributor_picture' %>
		</div>
		<div class="table_cell" style="text-align: center; vertical-align: top">
			<div class="subtitle">Other Contributors</div>
			<div class="spacer"></div>
			<ul id="contributors" class="no_bullet_list">

			</ul>
		</div>
	</div>
</div>

<script type="text/javascript">
	$(document).ready(function() {
		var exclude = ['julianguyen', 'jzshen'];
		$.getJSON("https://api.github.com/repos/julianguyen/ifme/contributors", function (data) {
      		_.each(data, function(dataItem) {
      			if(_.indexOf(exclude, dataItem.login) === -1) {
      				var contributor = '<li><a href="' + dataItem.html_url + '" target="_blank">' + dataItem.login + '</a></li>';
      				$('#contributors').append(contributor);
      			}
      		});
    	});
  });
</script>