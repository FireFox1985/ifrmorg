<div class="subtitle">
  <%= t('.subtitle') %>
</div>

<% if @medications.length > 0 %>
  <div class="spacer"></div>
  <table>
    <thead>
      <tr>
        <th><%= t('.name') %></th>
        <th><%= t('.strength') %></th>
        <th><%= t('.quantity') %></th>
        <th><%= t('.dosage') %></th>
        <th><%= t('.refill') %></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @medications.each do |medication| %>
        <tr>
          <td><%= link_to medication.name, medication %></td>
          <td><%= medication.strength.to_s + " " + medication.strength_unit %></td>
          <td><%= medication.total.to_s + " " + medication.total_unit %></td>
          <td><%= medication.dosage.to_s + " " + medication.dosage_unit %></td>
          <td><%= medication.refill %></td>
          <td>
            <i class="fa fa-pencil action"></i><%= link_to t('.edit'), edit_medication_path(medication) %>
            <i class="fa fa-trash-o action" style="margin-left: 20px"></i><%= link_to t('.delete'), medication, method: :delete, data: { confirm: t('.confirm') } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>